  "license": "UNLICENSED",
  "repository": "no",
  "main": "app/index.js",
  "engines": {
    "node": ">=14.x.x"
  },
  "scripts": {
    "dev": "node -r dotenv/config --es-module-specifier-resolution=node --inspect app/index.js",
